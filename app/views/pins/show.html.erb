<div class="row">
	<div class="span8 offset2">
		<div class="well">
		<%= image_tag @pin.image %>
		<p class="description">
		  <%= @pin.description %>
		</p>
		<p>
		  <strong>
      		Posted by  <%= @pin.user.name %>
    	  </strong>
		</p>
		<% if current_user == @pin.user %>
		<%= link_to 'Edit', edit_pin_path(@pin), class: "btn btn-info" %>
		<% end %>
		<%= link_to 'Back', pins_path, class: "btn btn-danger" %>
		<fb:like href="<%= "http://#{request.host}:#{request.port.to_s+request.fullpath}" %>" send="true" layout="button_count" width="450" show_faces="true"></fb:like>
			</div>
	</div>
</div>



